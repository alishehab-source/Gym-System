@model Gym_System.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<h2 class="mb-3">Member Details</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Gender</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Date of Birth</dt>
        <dd class="col-sm-9">@Model.DateOfBirth?.ToShortDateString()</dd>

        <dt class="col-sm-3">Subscription</dt>
        <dd class="col-sm-9">@Model.Subscription?.Name</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate?.ToShortDateString()</dd>

        <dt class="col-sm-3">Total Paid</dt>
        <dd class="col-sm-9">@Model.TotalPaid.ToString("C")</dd>

        <dt class="col-sm-3">Remaining</dt>
        <dd class="col-sm-9">@Model.AmountDue.ToString("C")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.EndDate < DateTime.Today)
            {
                <span class="badge bg-danger">Expired</span>
            }
            else
            {
                <span class="badge bg-success">Active</span>
            }
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">← Back to Members</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">✏ Edit</a>
</div>