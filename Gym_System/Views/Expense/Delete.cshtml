@model Gym_System.Models.Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<h2 class="text-danger">🗑 Delete Expense</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this expense?</strong>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Title:</label>
    <p>@Model.Title</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Amount:</label>
    <p>@Model.Amount.ToString("C")</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Date:</label>
    <p>@Model.Date.ToShortDateString()</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Notes:</label>
    <p>@Model.Notes</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">← Cancel</a>
</form>