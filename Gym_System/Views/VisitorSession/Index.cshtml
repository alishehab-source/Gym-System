@model IEnumerable<Gym_System.Models.VisitorSession>

@{
    ViewData["Title"] = "Visitor Sessions";
}

<h2>Visitor Sessions</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Visitor Session</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().SessionDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().Note)</th>
            <th>Session Type</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SessionDate.ToShortDateString()</td>
                <td>@item.Note</td>
                <td>@item.SessionType?.Name</td>
                <td>@item.SessionType?.Price.ToString("")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Member" asp-action="Index" class="btn btn-secondary ms-2">← Back to Members</a>