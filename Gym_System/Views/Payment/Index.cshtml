@model IEnumerable<Gym_System.Models.Payment>

@{
    ViewData["Title"] = "Payments";
    var memberName = ViewBag.MemberName as string;
    var memberId = (int)ViewBag.MemberId;
}

<h2>💳 Payments for @memberName</h2>

<a asp-controller="Member" asp-action="Index" class="btn btn-secondary mb-3">← Back to Members</a>
<a asp-action="Create" asp-route-memberId="@memberId" class="btn btn-success mb-3">+ Add Payment</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Date</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Amount.ToString("C")</td>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-sm btn-warning">✏ Edit</a>
                    <a asp-action="Delete" asp-route-id="@payment.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>