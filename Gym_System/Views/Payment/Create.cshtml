@model Gym_System.Models.Payment

@{
    ViewData["Title"] = "Add Payment";
}

<h2 class="mb-3">Add Payment for @ViewBag.MemberName</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="MemberId" />

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentDate" class="form-label"></label>
        <input asp-for="PaymentDate" class="form-control" type="date" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">💰 Add Payment</button>
    <a asp-controller="Member" asp-action="Index" class="btn btn-secondary ms-2">← Back to Members</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}