@model IEnumerable<Gym_System.Models.SessionType>

@{
    ViewData["Title"] = "Session Types";
}

<h2>Session Types</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Session Type</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("0.00")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
       
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Member" asp-action="Index" class="btn btn-secondary ms-2">← Back to Members</a>