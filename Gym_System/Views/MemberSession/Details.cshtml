@model Gym_System.Models.MemberSession

@{

    ViewData["Title"] = "Session Details";

}



<h1 class="mb-4">Session Details</h1>



<div class="card p-3">

    <p><strong>Date:</strong> @Model.SessionDate.ToString("yyyy-MM-dd")</p>

    <p><strong>Note:</strong> @Model.Note</p>

    <p><strong>Member:</strong> @Model.Member?.FullName ?? "N/A"</p>

</div>



<p class="mt-3">

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

